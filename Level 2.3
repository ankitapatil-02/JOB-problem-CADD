module prime_and_divisible(
    input logic [3:0] A,
    output logic P, D
);
    always_comb begin
        // P: 1 if number is prime
        P = (A == 4'd2) | (A == 4'd3) | (A == 4'd5) | 
            (A == 4'd7) | (A == 4'd11) | (A == 4'd13);
        
        // D: 1 if number is divisible by 3
        D = (A % 3 == 0);
    end
endmodule

